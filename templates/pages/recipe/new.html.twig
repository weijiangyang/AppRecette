{% extends "base.html.twig" %}
{% block title %}
    Création d'une recette
{% endblock %}
{% block stylesheets %}
    {{ parent()}}
    <style>
        body{
             background-image:url('{{app.request.getSchemeAndHttpHost() ~ "/images/table10.jpg" }}')
        }
    
    </style>
{% endblock %}
{% block body %}
<div class="container w-50container bg-white border-rounded rounded-3 px-5 py-3 my-5" style="width:70%">
    <h1>Création d'une recette</h1>
    <p class="text-info">(Le champ avec * n'est pas obligatoire à remplir)</p>
     {{ form_start(form) }}
   
            <div class="form-group my-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.name)}}
                </div>
                
            </div>
            <div class="form-group my-3">
                {{ form_label(form.imageFile) }}
                {{ form_widget(form.imageFile)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.imageFile)}}
                </div>
                
            </div>

            <div class="form-group my-3">
                {{ form_label(form.time) }}
                {{ form_widget(form.time)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.time)}}
                </div>
                
            </div>

            <div class="form-group my-3">
                {{ form_label(form.nbPeople) }}
                {{ form_widget(form.nbPeople)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.nbPeople)}}
                </div>
                
            </div>
            
            <div class="form-group my-3">
                {{ form_label(form.price) }}
                {{ form_widget(form.price)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.price)}}
                </div>
            
            </div>  

            <div class="form-group my-3">
                {{ form_label(form.difficulty) }}
                {{ form_widget(form.difficulty)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.difficulty)}}
                </div>
                
            </div>

            <div class="form-group my-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.description)}}
                </div>
                
            </div>

            <div class="form-group my-3">
                {{ form_label(form.isFavorite) }}
                {{ form_widget(form.isFavorite)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.isFavorite)}}
                </div>
                
            </div>
            <div class="form-group my-3">
                {{ form_label(form.isPublic) }}
                {{ form_widget(form.isPublic)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.isPublic)}}
                </div>
                
            </div>
            
            

            <div class="form-group my-3">
                {{ form_label(form.ingredients) }}
                {{ form_widget(form.ingredients)}}
                <div class="form-error text-danger">
                    {{ form_errors(form.ingredients)}}
                </div>
                
            </div>

            
             {{ form_end(form) }}
            
       
    </div>
</div>
    
{% endblock %}