{% extends 'base.html.twig' %}

{% block title %}AppRecette - Recettes{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Mes recettes</h1>
        <div><a href="{{ path('recipe_new') }}" class="btn btn-primary btn-sm my-4">Créer une recette</a></div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                 {{ message }}
            </div>
           
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                 {{ message }}
            </div>
           
        {% endfor %}
        {% if recipes %}
            <div class="count mb-4 ">
                Il y a <strong>{{ recipes.getTotalItemCount }}</strong> recette(s) au total
            </div>
            <table class="table table-hover">
                <thead>
                    <tr style="border-bottom:3px solid orange">
                    <th scope="col">Numéro</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix(€)</th>
                    <th scope="col">Difficulty</th>
                    <th scope="col">Date</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppression</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in recipes %}
                        <tr class="table-light">
                            <th scope="row">{{ recipe.id }}</th>
                            <td>{{ recipe.name }}</td>
                            <td>{{ recipe.price is same as null ? 'Non renseigné':recipe.price }}</td>
                            <td>{{ recipe.difficulty is same as null ? 'Non renseigné':recipe.difficulty }}</td>
                            <td>{{ recipe.createdAt | date('d/m/Y')}}</td>
                            <td><a href="{{ path('recipe_edit',{ 'id':recipe.id })}}" class="btn btn-info btn-sm"><i class="fa-solid fa-pen-to-square"></i></a></td>
                             <td><a href="{{ path('recipe_delete',{ 'id':recipe.id })}}" class="btn btn-warning btn-sm"><i class="fa-solid fa-trash"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation d-flex justify-content-center my-4">
                {{ knp_pagination_render(recipes) }}
            </div>
        {% else %}
            Il n'y a pas de recette
        {% endif %}
    </div> 
{% endblock %}

