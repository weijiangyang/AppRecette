{% extends "base.html.twig" %}
{% block metades %}
    <meta name="description" content="inscrivez vous sur l'appRecette pour créer vos propres recettes et les partager avec les autres ou les garder pour vous-même">
    
{% endblock %}
{% block title %}
    AppRecette - Inscription
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>
    body{
             background-image:url('https://myrecette.s3.eu-west-3.amazonaws.com/images-background/wall.jpg')
        }

</style>
    
{% endblock %}
{% block body %}
    <div class="container bg-white border-rounded rounded-3 px-5 py-3 my-5" style="max-width:600px">
        <h1 class="mt-4">Formulaire d'inscription</h1>
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.fullName) }}
        {{ form_row(form.pseudo) }}
        {{ form_row(form.plainPassword, {
            
        }) }}
<small class="text-warning " >le mot de passe contient au moins 8 caractères , au moins une lettre et un chiffre</small>
       

        <button type="submit" class="btn btn-primary mt-5">Inscrivez vous</button>
    {{ form_end(form) }}
    </div>
{% endblock %}
