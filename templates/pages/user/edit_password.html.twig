{% extends "base.html.twig" %}
{% block title %}
    SymRecipe - Modification du mot de passe
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
<style>
    body{
             background-image:url('{{app.request.getSchemeAndHttpHost() ~ "/images/wall.jpg" }}')
        }

</style>
    
{% endblock %}
{% block body %}
    <div class="container w-50 bg-white border-rounded rounded-3 px-5 py-3 my-5">
        <h1 class="mt-4">
            Modification du mot de passe
        </h1>
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                 {{ message }}
            </div>
        {% endfor %}
        {{ form(form) }}
    </div>
{% endblock %}